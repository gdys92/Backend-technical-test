<div>
  <label>Title</label>
  <input type="text" name="title" value="<%= movie.title %>">
</div>
<div>
  <label>Director</label>
  <select name="rating">
  <% ratings.forEach(rating => { %>
    <% if (rating.id === movie.movie) { %>
      <option selected label="<%= rating.name %>" value="<%= rating.id %>">
    <% } else { %>
      <option label="<%= rating.name %>" value="<%= rating.id %>">
    <% } %>
  <% }) %>
  </select>
</div>
<div>
  <label>Publish Date</label>
  <input type="date" name="publishDate"
        value="<%= movie.publishDate == null ? '' : movie.publishDate.toISOString().split('T')[0] %>">
</div>
<div>
  <label>Page Count</label>
  <input type="number" name="pageCount" min="1" value="<%= movie.pageCount %>">
</div>
</div>
<div>
  <label>Cover</label>
  <input type="file" name="cover">
</div>
<div>
  <label>Description</label>
  <textarea name="description"><%= movie.description %></textarea>
</div>